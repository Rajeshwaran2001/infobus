{
  "name": "infobus",
  "version": "1.1.81",
  "description": "Dashboard App For Infobus",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "winpublish": "electron-forge publish --arch=ia32"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rajeshwaran2001/infobus.git"
  },
  "electronUpdater": {
    "publishUrl": "https://github.com/Rajeshwaran2001/infobus/releases"
  },
  "keywords": [
    "Dahboard"
  ],
  "author": "Rajeshwaran",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Rajeshwaran2001/infobus/issues"
  },
  "homepage": "https://rajeshwaran.me/",
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-dmg": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@electron-forge/publisher-github": "^6.1.1",
    "electron": "^23.2.0",
    "electron-installer-dmg": "^4.0.0"
  },
  "dependencies": {
    "electron-builder": "^23.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^5.3.0",
    "fs.promises": "^0.1.2",
    "update-electron-app": "^2.0.1"
  },
  "build": {
    "appId": "in.dashboard.infobus",
    "productName": "Infobus",
    "copyright": "Copyright Â© 2023 ${author}",
    "homepage": "https://rajeshwaran.me",
    "mac": {
      "target": "dmg",
      "icon": "./assets/icons/logo.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "title": "Infobus",
      "icon": "./assets/icons/logo.icns",
      "background": "./assets/icons/logo.icns",
      "contents": [
        {
          "x": 410,
          "y": 220
        },
        {
          "x": 130,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility",
      "icon": "./public/icons/png/Logo.png"
    },
    "deb": {
      "icon": "./public/icons/png/Logo.png",
      "maintainer": "Rajeshwaran <rajesh@rajeshwaran.me>",
      "description": "Infobus",
      "homepage": "https://rajeshwaran.me",
      "license": "MIT"
    },
    "rpm": {
      "icon": "./public/icons/png/Logo.png",
      "maintainer": "Rajeshwaran <rajesh@rajeshwaran.me>",
      "description": "Rajeshwaran <rajesh@rajeshwaran.me>",
      "homepage": "https://rajeshwaran.me",
      "license": "MIT"
    },
    "appImage": {
      "icon": "./public/icons/png/Logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/icons/png/Logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./assets/icons/logo.ico",
      "uninstallerIcon": "./assets/icons/logo.ico",
      "installerHeaderIcon": "./assets/icons/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Infobus"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "*.js"
    ],
    "asarUnpack": [
      "loading.html"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Rajeshwaran2001",
        "repo": "infobus",
        "private": true
      }
    ]
  }
}
